package mountain;
import java.lang.Math;
import fractal.*;

public class Mountain extends Fractal {
	Point a, b, c;
	int iteration;
	
	public Mountain(Point a, Point b, Point c){
		super();
		this.a = a;
		this.b = b;
		this.c = c;
		iteration = 0;
	}
	
	public String getTitle() {
		return "Mountain";
	}
	
	public void draw(TurtleGraphics turtle) {
		turtle.penDown();
	
		int lines = (int) Math.pow(2, iteration++);
		double xAB = b.getX() - a.getX();
		double xBC = c.getX() - b.getX();
		double xCA = a.getX() - c.getX();
		
		double yAB = b.getY() - a.getY();
		double yBC = c.getY() - b.getY();
		double yCA = a.getY() - c.getY();
		
		for (int i = 0; i < lines; ++i) {
			turtle.moveTo(a.getX() + i*xAB/(lines + 1) , a.getY() + i*yAB/(lines + 1));
			turtle.forwardTo(b.getX() + i*xBC/(lines + 1), b.getY() + i*yBC/(lines + 1));
//			turtle.moveTo(b.getX() + i*xBC/(lines + 1) , b.getY() + i*yBC/(lines + 1));
			turtle.forwardTo(c.getX() + i*xCA/(lines + 1), c.getY() + i*yCA/(lines + 1));
//			turtle.moveTo(c.getX() + i*xCA/(lines + 1) , c.getY() + i*yCA/(lines + 1));
			turtle.forwardTo(a.getX() + i*xAB/(lines + 1), a.getY() + i*yAB/(lines + 1));
		}
	}
}
