package sandbox;

public class Test {

	public static void main(String[] args) {
		move(3,1,3,2);
	}

	public static void move(int n, int start, int dest, int temp) {
		   if (n == 1) {
		      System.out.println("Move from " + start + " to " + dest);
		   } else {
		      move(n - 1, start, temp, dest);
		      System.out.println("Move from " + start + " to " + dest);
		      move(n - 1, temp, dest, start);
		} }
}
