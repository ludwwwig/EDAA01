package testqueue;

import static org.junit.Assert.*;
import org.junit.Test;
import queue.FifoQueue;

public class TestAppendFifoQueue {
	@Test
	public void testAppend() {
		FifoQueue<Integer> queue1 = new FifoQueue();
		FifoQueue<Integer> queue2 = new FifoQueue();
		queue1.append(queue2);
		assertTrue("Queue not empty after appending two empty queues", queue1.poll() == null);
		queue2.offer(2);
		queue1.append(queue2);
		assertEqual("Does not contain", 2, queue1.poll());
	}
}
